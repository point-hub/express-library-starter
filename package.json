{
  "name": "@point-hub/express-library-starter",
  "version": "1.0.0",
  "description": "Express boilerplate for create library",
  "type": "module",
  "main": "lib/index.js",
  "files": [
    "lib/"
  ],
  "scripts": {
    "build:compile": "tsc --project tsconfig.build.json",
    "build:resolve-path": "tsc-alias --project tsconfig.build.json",
    "build": "rimraf lib && npm run build:compile && npm run build:resolve-path",
    "lint": "eslint ./src/**/*.ts",
    "lint:fix": "npm run lint -- --fix",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --runInBand",
    "test:coverage": "rimraf coverage && npm run test -- --coverage"
  },
  "keywords": [
    "express",
    "library",
    "starter"
  ],
  "author": "Martien Dermawan Tanama <martiendt@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/point-hub/express-library-starter.git"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/jest": "^27.5.1",
    "@types/node": "^17.0.31",
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "eslint": "^8.15.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^28.0.2",
    "tsc-alias": "^1.6.11",
    "typescript": "^4.6.4"
  }
}
